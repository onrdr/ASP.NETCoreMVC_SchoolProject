@model Student

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3 class="text-center text-primary">Student Information</h3>

<div class="row m-1">
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Student No</th>
                <td>@Model.StudentNo</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>@Model.Birthday.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th>City</th>
                @if (Model.City != null)
                {
                    <td>@Model.City</td>
                }
                else
                {
                    <td>---</td>
                }
            </tr> 
        </table>
    </div>
    <div class="col-sm-3">
        @if (string.IsNullOrEmpty(Model.Picture))
        {
            <img style="border-radius: 50%; width:200px; height:200px" src="/UserPicture/Default_Icon.jpg" />
        }
        else
        {
            <img style="border-radius: 50%; width:200px; height:200px" src=" @Model.Picture" />
        }

    </div>
</div>



