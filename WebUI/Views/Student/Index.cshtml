@model StudentInformationVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Student/_StudentLayout.cshtml";
}


<h3 class="text-center text-primary">Student Information</h3>

@if (TempData["update-status"] is not null)
{
    <div class="alert alert-info">
        <span>@TempData["update-status"]</span>
    </div>
}

<div class="row m-1">
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Student No</th>
                <td>@Model.Student.StudentNo</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Student.Name</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.Student.LastName</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>@Model.Student.Birthday.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.Student.Gender</td>
            </tr>
            <tr>
                <th>City</th>
                @if (Model.Student.City != null)
                {
                    <td>@Model.Student.City</td>
                }
                else
                {
                    <td>---</td>
                }
            </tr>
            <tr>
                <th>UserName</th>
                <td>@Model.AppUser.UserName</td>
            </tr>
            <tr>
                <th>Email Adress</th>
                <td>@Model.AppUser.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.AppUser.PhoneNumber</td>
            </tr>
        </table>
    </div>
    <div class="col-sm-3">
        @if (string.IsNullOrEmpty(Model.Student.Picture))
        {
            <img style="border-radius: 50%; width:200px; height:200px" src="/UserPicture/Default_Icon.jpg" />
        }
        else
        {
            <img style="border-radius: 50%; width:200px; height:200px" src=" @Model.Student.Picture" />
        }

    </div>
</div>



