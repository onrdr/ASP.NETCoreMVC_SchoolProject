<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/morph.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between m-2">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-danger col-12" style="width:120px" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a class="btn btn-danger" asp-controller="Home" asp-action="Logout">
                                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h3 class="text-center text-primary">Menu</h3>
                <a class="btn btn-primary col-12" asp-controller="Admin" asp-action="Index">Home</a>

                <a class="btn btn-primary col-12 mt-3" asp-controller="Admin" asp-action="RegisterNewStudent">Register New Student</a>

                <a class="btn btn-primary col-12 mt-3" asp-controller="Admin" asp-action="RegisterAdmin">Register New Admin</a>

                <a class="btn btn-primary col-12 mt-3" asp-controller="Admin" asp-action="RegisterNewTeacher">Register New Teacher</a>

                <a class="btn btn-primary col-12 mt-3" asp-controller="Member" asp-action="Edit">Account Settings</a>

                <a class="btn btn-primary col-12 mt-3" asp-action="Users" asp-controller="Admin">Members</a>

                <a class="btn btn-primary col-12 mt-3" asp-action="Roles" asp-controller="Admin">Roles</a> 
            </div>
            <div class="col-md-8" style="margin-left:50px">
                <partial name="_Notification" />
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

