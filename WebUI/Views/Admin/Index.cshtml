@model AdminVM

@{
    ViewData["Title"] = "Admin Information";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3 class="text-center text-primary">Admin Information</h3>

<div class="row">
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>User Name</th>
                <td>@Model.UserName</td>
            </tr> 
            <tr>
                <th>Email Address</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.PhoneNumber</td>
            </tr>  
        </table>
    </div>
    <div class="col-sm-3">
        @if (string.IsNullOrEmpty(Model.Picture))
        {
            <img style="border-radius: 50%; width:200px; height:200px" src="/UserPictures/Default_Icon.jpg" />
        }
        else
        {
            <img style="border-radius: 50%; width:200px; height:200px" src=" @Model.Picture" />
        }
    </div>
</div>